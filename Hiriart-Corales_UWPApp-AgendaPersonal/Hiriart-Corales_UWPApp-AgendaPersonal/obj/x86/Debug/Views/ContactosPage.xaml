<Page
    x:Class="Hiriart_Corales_UWPApp_AgendaPersonal.Views.ContactosPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Hiriart_Corales_UWPApp_AgendaPersonal.Core.Models"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:ConnectionId='2' x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <RelativePanel>
                <ListView x:ConnectionId='3' Name="ContactosList"
                  SelectionMode="Single"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.IsVerticalRailEnabled="True"
                  ScrollViewer.VerticalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.IsHorizontalRailEnabled="True"
                  Margin="20">
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"  >
                                <TextBlock Text="Nombre" Margin="8,0" Width="150" Foreground="#FF403D3D" />
                                <TextBlock Text="Apellido" Width="150" Foreground="#FF403D3D" />
                                <TextBlock Text="Teléfono" Width="150" Foreground="#FF403D3D" />
                                <TextBlock Text="e-mail" Width="150" Foreground="#FF403D3D" />
                                <TextBlock Text="Organización" Width="150" Foreground="#FF403D3D" />
                                <TextBlock Text="Fecha de nacimiento" Width="150" Foreground="#FF403D3D" />
                                <TextBlock Text="Información adicional" Width="200" Foreground="#FF403D3D" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate                            >
                            <StackPanel x:ConnectionId='6' Orientation="Horizontal" >
                                <TextBlock x:ConnectionId='7' Name="nombreTextBlock"
                                                             
                                       Width="150" TextWrapping="Wrap"/>
                                <TextBlock x:ConnectionId='8' Name="apellidoTextBlock"
                                                               
                                       Width="150" TextWrapping="Wrap"/>
                                <TextBlock x:ConnectionId='9' Name="telefonoTextBlock"
                                                               
                                       Width="150" TextWrapping="Wrap"/>
                                <TextBlock x:ConnectionId='10' Name="emailTextBlock"
                                                            
                                       Width="150" TextWrapping="Wrap"/>
                                <TextBlock x:ConnectionId='11' Name="organizacionTextBlock"
                                                                   
                                       Width="150" TextWrapping="Wrap"/>
                                <TextBlock x:ConnectionId='12' Name="fechaNacimientoTextBlock"
                                                                      
                                       Width="150" TextWrapping="Wrap"/>
                                <TextBlock x:ConnectionId='13' Name="infoAdicionalTextBlock"
                                                                           
                                       Width="150" TextWrapping="Wrap"/>
                                <TextBlock x:ConnectionId='14' Name="idTextBlock"
                                                                 
                                       Width="0" TextWrapping="Wrap"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </RelativePanel>
        </Grid>
    </Grid>
</Page>

