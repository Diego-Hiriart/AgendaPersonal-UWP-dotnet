<Page
    x:Class="Hiriart_Corales_UWPApp_AgendaPersonal.Views.DiarioPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Hiriart_Corales_UWPApp_AgendaPersonal.Core.Models"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <RelativePanel>
                <ListView Name="ArtistasList"
                  SelectionMode="Single"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.IsVerticalRailEnabled="True"
                  ScrollViewer.VerticalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.IsHorizontalRailEnabled="True"
                  Margin="20">
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"  >
                                <TextBlock Text="Fecha" Margin="8,0" Width="150" Foreground="#FF403D3D" />
                                <TextBlock Text="Contenido" Width="500" Foreground="#FF403D3D" />
                                <TextBlock Text="Eventos relacionados" Width="500" Foreground="#FF403D3D" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:Diario">
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Name="fechaTextBlock"
                                       Text="{x:Bind Fecha}"
                                       Width="150" TextWrapping="Wrap"/>
                            <TextBlock Name="contenidoTextBlock"
                                       Text="{x:Bind Contenido}"
                                       Width="500" TextWrapping="Wrap"/>
                            <TextBlock Name="eventosTextBlock"
                                       Text="{x:Bind ListaEventoID}"
                                       Width="500" TextWrapping="Wrap"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </RelativePanel>
        </Grid>
    </Grid>
</Page>
